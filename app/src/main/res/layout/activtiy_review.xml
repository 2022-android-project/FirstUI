<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mypage.UserFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/basic">

        <ImageView
            android:id="@+id/back2main"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/arrow" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="리뷰 등록"
            android:textColor="@color/strong"
            android:textSize="16dp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="35dp"
                android:textSize="18sp"
                android:fontFamily="@font/normal"
                android:textColor="@color/black"
                android:text="다녀온 전시회"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gallery_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitStart"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/gallery_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginTop="28dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/normal" />

                    <TextView
                        android:id="@+id/profile_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/normal"
                        >

                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="35dp"
                android:textSize="18sp"
                android:fontFamily="@font/normal"
                android:textColor="@color/black"
                android:text="전시회는 어떠셨나요?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="만족도" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <RatingBar
                    android:id="@+id/ratingbar"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:fontFamily="@font/normal"
                android:textColor="@color/black"
                android:text="리뷰 쓰기"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="top"
                android:textSize="12dp"
                android:hint="리뷰를 작성해주세요"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:text="취소"
                    android:backgroundTint="@color/gray"
                    android:textColor="@color/strong_gray"
                    android:layout_marginRight="10dp"
                    />
                <Button
                    android:id="@+id/submit"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:text="등록"
                    android:layout_marginLeft="10dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</LinearLayout>